SHELL=  /bin/sh
ISIZE = 4
RSIZE = 8
#FCOMP=  ifort -nofree
#FFLAGS= -O2 -g -traceback -i$(ISIZE) -r$(RSIZE)
FCOMP= ftn
FFLAGS= -O3 -g -traceback -convert big_endian -I $(INC) -i$(ISIZE) -r$(RSIZE)

vint_g1: vint_g1.f 
	@echo " "
	@echo "  Compiling the interpolation program....."
	$(FCOMP) $(FFLAGS) vint_g1.f $(LIBS) -o vint_g1.x
	@echo " "

CMD =   vint_g1.x

clean:
	-rm -f  *.o  *.mod

install:
	mv $(CMD) ../../exec/$(CMD)
