SHELL=  /bin/sh
ISIZE = 4
RSIZE = 8
FCOMP=  ifort -nofree
FFLAGS= -O2 -g -traceback -i$(ISIZE) -r$(RSIZE)

ushear_g1: ushear_g1.f 
	@echo " "
	@echo "  Compiling the mean field program and subroutines....."
	$(FCOMP) $(FFLAGS) ushear_g1.f $(LIBS) -o ushear_g1.x
	@echo " "

CMD =   ushear_g1.x

clean:
	-rm -f  *.o  *.mod

install:
	mv $(CMD) ../../exec/$(CMD)
