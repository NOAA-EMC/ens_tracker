SHELL=  /bin/sh
ISIZE = 4
RSIZE = 8
FCOMP=  ifort -nofree
FFLAGS= -O2 -fpe0 -I $(INC)   -i$(ISIZE) -r$(RSIZE)

tave_g2: tave_g2.f 
	@echo " "
	@echo "  Compiling the mean field program and subroutines....."
	$(FCOMP) $(FFLAGS) tave_g2.f $(LIBS) -o tave_g2.x
	@echo " "

CMD =   tave_g2.x

clean:
	-rm -f  *.o  *.mod

install:
	mv $(CMD) ../../exec/$(CMD)
